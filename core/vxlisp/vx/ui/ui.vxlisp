(func boolean-writestate<-ui : boolean
 [ui : ui]
 (let : boolean
  [uid : string := (:uid ui)
   uiapp : ui := (ui-readstate-uiapp)
   parentuid : string :=
    (string-parentuid<-uid uid)
   parentui : ui :=
    (if : ui
     (then
      (= "" parentuid)
      uiapp)
     (else
      (ui<-ui-find
       uiapp
       parentuid)))
   isfound : boolean :=
    (!-empty parentui)
   iswrite : boolean :=
    (if
     (then isfound
      (boolean-write<-ui-parent
       ui parentui)))]
  isfound)
 :context
 :doc "")

